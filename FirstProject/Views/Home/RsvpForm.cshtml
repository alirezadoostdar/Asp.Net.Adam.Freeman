@model FirstProject.Models.GuestResponse;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-utilities.css" rel="stylesheet" />
    <title>RsvpForm</title>
</head>
<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">RSVP</h5>
    <form class="m-2" asp-action="RsvpForm" method="post">
        <div asp-validation-summary="All"></div>
        <div  class="form-group">
            <label class="form-label" asp-for="Name">Your name:</label>
            <input class="form-control" asp-for="Name"/>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Email">Your email:</label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="form-control">
            <label class="form-label" asp-for="Phone">Your phone:</label>
            <input class="form-control" asp-for="Phone" />
        </div>
        <div class="form-control">
            <label class="form-label" asp-for="WillAttend">Will you attend?</label>
            <select class="form-control" asp-for="WillAttend">
                <option value="">Choose an option</option>
                <option value="true">Yes, I'll be there</option>
                <option value="false">No, I can't come'</option>
            </select>

        </div>
        <button class="btn btn-primary mt-3" type="submit">Submit RSVP</button>
    </form>
</body>
</html>